# ============================================
# ねっぱん設定
# ============================================
# ねっぱん! ログイン情報
NEPPAN_CODE=your_neppan_code
NEPPAN_USER=your_username
NEPPAN_PASS=your_password

# ============================================
# Google Drive設定（オプション）
# ============================================
# Drive アップロード先フォルダID
DRIVE_FOLDER_ID=your_drive_folder_id

# サービスアカウントキーファイルのパス
GOOGLE_APPLICATION_CREDENTIALS=C:\path\to\drive-sa.json
SA_FILE=C:\path\to\drive-sa.json

# ============================================
# データベース設定
# ============================================
# SQLite (開発用)
DATABASE_URL=sqlite:///./vacation_rental_pms.db

# PostgreSQL (本番用)
# DATABASE_URL=postgresql://user:password@localhost:5432/vacation_rental_pms

# ============================================
# API設定
# ============================================
API_HOST=0.0.0.0
API_PORT=8000

# ============================================
# フロントエンド設定
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8000

# ============================================
# クローラー設定
# ============================================
# ヘッドレスモード（true/false）
HEADLESS=true

# タイムアウト設定（秒）
TIMEOUT_SECONDS=90

# リトライ設定
MAX_RETRIES=5
INITIAL_RETRY_DELAY=5

# デバッグ設定
TAKE_SCREENSHOT=true
SAVE_HTML=true

# ============================================
# Redis設定（オプション）
# ============================================
# REDIS_URL=redis://localhost:6379

# ============================================
# CORS設定
# ============================================
# CORS_ORIGINS=["http://localhost:3000"]